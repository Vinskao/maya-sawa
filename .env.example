# ==================== 必要環境變數 ====================

# PostgreSQL 連接字符串
# PostgreSQL Configuration
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=database_name
DB_USERNAME=username
DB_PASSWORD=password
DB_SSLMODE=require

# OpenAI API 配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# ==================== 可選環境變數 ====================

# Redis 配置
REDIS_HOST=localhost
REDIS_CUSTOM_PORT=6379
REDIS_PASSWORD=

# API 配置
PUBLIC_API_BASE_URL=https://your-api-base-url.com

# ==================== 同步配置 ====================

# 啟動時自動同步
ENABLE_AUTO_SYNC_ON_STARTUP=true
ENABLE_PEOPLE_WEAPONS_SYNC=true

# 定期同步（默認關閉，避免無限循環）
ENABLE_PERIODIC_SYNC=false
ENABLE_PEOPLE_WEAPONS_PERIODIC_SYNC=false

# 同步時間設置
SYNC_INTERVAL_DAYS=3
SYNC_HOUR=3
SYNC_MINUTE=0

# ==================== 日誌配置 ====================

# 日誌級別 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO 