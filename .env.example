# ==================== 必要環境變數 ====================

# PostgreSQL 數據庫配置
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=database_name
DB_USERNAME=username
DB_PASSWORD=password
DB_SSLMODE=require

# OpenAI API 配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_ORGANIZATION=your-openai-organization-id

# ==================== 可選環境變數 ====================

# 環境類型配置
ENV_TYPE=development

# Redis 配置
REDIS_HOST=localhost
REDIS_CUSTOM_PORT=6379
REDIS_PASSWORD=

# API 配置
PUBLIC_API_BASE_URL=https://your-api-base-url.com
PUBLIC_TYMB_URL=https://your-tymb-url.com

# ==================== 向量搜索配置 ====================

# 文章匹配數量（默認 3 個）
MATCH_COUNT=3

# 相似度閾值（默認 0.5）
SIMILARITY_THRESHOLD=0.5

# 嵌入配置
# 強制本地生成嵌入（忽略上游預計算的嵌入）
FORCE_LOCAL_EMBEDDING=false

# 驗證上游嵌入（檢查維度是否為 1536）
VALIDATE_UPSTREAM_EMBEDDING=true

# ==================== 同步配置 ====================

# 啟動時自動同步
ENABLE_AUTO_SYNC_ON_STARTUP=false
ENABLE_PEOPLE_WEAPONS_SYNC=false

# 定期同步（默認關閉，避免無限循環）
ENABLE_PERIODIC_SYNC=false
ENABLE_PEOPLE_WEAPONS_PERIODIC_SYNC=false

# 同步時間設置
SYNC_INTERVAL_DAYS=3
SYNC_HOUR=3
SYNC_MINUTE=0

# ==================== 日誌配置 ====================

# 日誌級別 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO 